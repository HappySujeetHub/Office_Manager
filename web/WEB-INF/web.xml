<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
   
    <servlet>
        <servlet-name>login1</servlet-name>
        <servlet-class>Admin.login1</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddEmolyee</servlet-name>
        <servlet-class>Admin.AddEmolyee</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateEmployee</servlet-name>
        <servlet-class>Admin.UpdateEmployee</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangePasword</servlet-name>
        <servlet-class>Admin.ChangePasword</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Attendance</servlet-name>
        <servlet-class>Employee.Attendance</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>Admin.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BlockAcc</servlet-name>
        <servlet-class>Admin.BlockAcc</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login1</servlet-name>
        <url-pattern>/login1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddEmolyee</servlet-name>
        <url-pattern>/AddEmolyee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateEmployee</servlet-name>
        <url-pattern>/UpdateEmployee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangePasword</servlet-name>
        <url-pattern>/ChangePasword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Attendance</servlet-name>
        <url-pattern>/Attendance</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BlockAcc</servlet-name>
        <url-pattern>/BlockAcc</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    <filter>
        <filter-name>filter1</filter-name>
        <filter-class>Com.MyFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>filter1</filter-name>
        <url-pattern>/AdminHome.jsp</url-pattern>
    </filter-mapping>
</web-app>
